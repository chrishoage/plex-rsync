{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": false,
    "modules": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true,
    "globalReturn": false,
    "jsx": true,
  },
  "rules": {
    "no-console": 0,
    "no-extra-parens": [0, "functions"], //for some reason functions does not work as expected
    "no-else-return": 2,
    "no-eq-null": 2,
    "radix": 1,
    "no-void": 2,
    "no-throw-literal": 2,
    "no-floating-decimal": 2,
    "no-undef-init": 2,
    "no-self-compare": 2,
    "operator-linebreak": [2, "before"],
    "no-var": 2,
    "indent": [2, 2, {"SwitchCase": 1}],
    "brace-style": [2, "1tbs"],
    "semi": [2, "never"],
    "curly": [1, "multi-line"],
    "quotes": [2, "single", "avoid-escape"],
    "object-shorthand": [2, "always"],
    "no-underscore-dangle": 0,
    "new-cap": [2, {"capIsNew": false}],
    "react/no-unknown-property": 1,
    "react/no-multi-comp": 1,
    "react/prop-types": 1,
    "react/self-closing-comp": 1,
    "react/wrap-multilines": 1,
    "react/jsx-uses-react": 1,
    // I want to turn these on...
    "space-after-keywords": [1, "always"],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "never"],
    "react/jsx-quotes": [1, "double", "avoid-escape"],
    "react/sort-comp": [1, {
        "order": [
          "lifecycle",
          "everything-else",
          "render"
        ],
        "groups": {
          "lifecycle": [
            "displayName",
            "propTypes",
            "defaultProps",
            "contextTypes",
            "childContextTypes",
            "getStores",
            "getPropsFromStores",
            "componentDidConnect",
            "constructor",
            "statics",
            "getChildContext",
            "shouldComponentUpdate",
            "componentWillMount",
            "componentDidMount",
            "componentWillUnmount",
            "componentWillReceiveProps",
            "componentWillUpdate",
            "componentDidUpdate"
          ]
        }
      }]
  }
}
